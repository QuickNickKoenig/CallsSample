<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding">

    <ImageView
            android:id="@+id/type"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:padding="@dimen/padding"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleCallMedium"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"

            tools:text="1:05000"/>

    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleCallMedium"

            android:layout_alignTop="@id/type"
            android:layout_toRightOf="@id/type"
            android:layout_toEndOf="@id/type"
            android:layout_toLeftOf="@id/duration"
            android:layout_toStartOf="@id/duration"

            tools:text="10.02.01"/>
    <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleCallLarge"

            android:layout_alignBottom="@id/type"
            android:layout_toRightOf="@id/type"
            android:layout_toEndOf="@id/type"
            android:layout_toLeftOf="@id/duration"
            android:layout_toStartOf="@id/duration"

            tools:text="8-123-456789"/>

</RelativeLayout>